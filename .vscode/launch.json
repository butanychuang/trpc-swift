{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Demo",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "nodemon",
            "cwd": "${workspaceFolder}/demo"
        },
        {
            "name": "Generator",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "nodemon",
            "cwd": "${workspaceFolder}/generator"
        },
        {
            "name": "Compile Demo",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["run", "watch"],
            "cwd": "${workspaceFolder}/demo",
            "console": "integratedTerminal"
        },
        {
            "name": "Compile Generator",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["run", "watch"],
            "cwd": "${workspaceFolder}/generator",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "TRPC-Swift",
            "configurations": ["Generator", "Compile Demo", "Compile Generator"]
        }
    ]
}
