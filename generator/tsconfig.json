{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "rootDir": "src",
        "outDir": "debug",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "mapRoot": "../debug",
        "incremental": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"]
}
